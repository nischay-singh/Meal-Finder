<%- include('partials/header'); -%>

<main class="results">
  <% if(!results){ %>
  <div class="no-results mt-auto h-100 d-flex justify-content-center align-items-center">
    <h2>No Results Found...</h2>
  </div>

  <% }else{ %>
  <div class="row">
    <% for(let dish of results){ %>
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card">
        <div class="card-body text-center">
          <a href="/dish/<%= dish.id %>" class="card-link">
            <img src="<%= dish.image %>" class="thumb">
            <h5 class="card-title text-center"> <%= dish.title %> </h5>
            <ul class="d-flex justify-content-center">
              <li class="dish-tag dish-tag-calories"><%= dish.nutrition.nutrients[0].amount %> kcal</li>
              <% if(dish.cuisines){ %>
              <% for(let cuisine of dish.cuisines){ %>
              <li class="dish-tag dish-tag-cuisine"><%= cuisine %></li>
              <% }} %>
            </ul>
          </a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <% } %>

</main>


<%- include('partials/footer'); -%>